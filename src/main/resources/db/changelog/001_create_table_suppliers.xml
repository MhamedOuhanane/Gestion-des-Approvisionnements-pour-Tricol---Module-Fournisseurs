<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    
    <changeSet id="001" author="M'hamed">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="suppliers"/>
            </not>
        </preConditions>

        <createTable tableName="suppliers">
            <column name="uuid" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="company" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="contact" type="VARCHAR(150)">
                <constraints nullable="false" />
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="phone" type="VARCHAR(13)">
                <constraints nullable="false" />
            </column>
            <column name="city" type="VARCHAR(50)">
                <constraints nullable="false" />
            </column>
            <column name="ice" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>    